                                <td class="col-lg-1" id="team_save_button"><button type="button" class="btn btn-success" onclick="team_table_save()">Save</button></td>
                                <td class="col-lg-1"><button type="button" class="btn btn-danger" onclick='DeleteRowFunction(this)'>Delete</button></td>
                            </tr>
                            <tr>
                                <td class="col-lg-8" id="team_name_field"><p><strong>Alex Smith</strong></p></td>
                                <td class="col-lg-8" id="new_Team_Name"><p><strong></strong></p></td>
                                <td id="tableTeamEditGroup">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter New Team Member Here" id="editTeam">


                                    </div>
                                </td>
