                                <td class="col-lg-1" id="team_save_button"><button type="button" class="btn btn-success" onclick="team_table_save()">Save</button></td>
                                <td class="col-lg-1"><button type="button" class="btn btn-danger" onclick='DeleteRowFunction(this)'>Delete</button></td>
                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <!--Lists the Project Risks with the option to edit-->
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding-top: 10px;">
            <h3>Risks</h3>
        </div>
        <div class="risks">
            <!--Entering new risk and risk status-->
   

            <div class="table-responsive">
                <table id="myRisktable" class="table table-hover table-dark table-striped">
                    <thead class="thead-dark">
                        <tr>                         
                           <td>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Enter New Risk Here" id="addRisk">
                                    
                                    
                                </div>
                            </td>
                            <td>
                               <div class="input-group">
                                   <input type="text" class="form-control" placeholder="Enter New Risk Status" id="addRiskStatus" />
                               </div>
                            </td>

                           <td>
                               <div class="input-group-btn">
                                   <button type="button" class="btn btn-success" onclick="addRiskFunction()">
                                       <span class="glyphicon glyphicon-plus"></span>
                                   </button>
