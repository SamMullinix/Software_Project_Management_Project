                            <td id="risk_Edit_Status_group">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Enter New Risk Status Here" id="edit_Risk_Status" />
                                </div>
                            </td>

                            <td class="col-lg-1"><button type="button" class="btn btn-primary" onclick="risk_table_edit()">Edit</button></td>
                            <td id="risk_Save_button" class="col-lg-1"><button type="button" class="btn btn-success" onclick="risk_table_save()">Save</button></td>
                            <td class="col-lg-1"><button type="button" class="btn btn-danger" onclick='DeleteRowFunction(this)'>Delete</button></td>
                        </tr>
